@model IEnumerable<CinemaBerras.Models.Display>

<br />
<div class="container row p-0 m-0">
    <div class="col-12">
        <h1>Movie List</h1>
        <h3>Today @Model.FirstOrDefault().Date.ToString("dddd, dd MMMM yyyy")</h3>
    </div>

    <div class="col-12 border p-3 mt-3">

        @if (Model.Count() > 0)
        {
            <table class=" table table-striped border">

                <tr class="table table-secondary">

                    <th>
                        @*<label asp-for="FirstOrDefault().Movie.Title"></label>*@
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]" title="Sort movies by title">Movie title</a>
                    </th>
                    <th>
                        @*<label asp-for="FirstOrDefault().Time"></label>*@
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TimeSortParm"]" title="Sort movies by starting time">Starts at</a>
                    </th>
                    <th>
                        @*<label asp-for="FirstOrDefault().Salon"></label>*@
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SalonSortParm"]" title="Sort movies by salon name">Salon</a>
                    </th>
                    <th>
                        @*<label>Available seats</label>*@
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SeatsSortParm"]" title="Sort movies by available seats in salon">Available seats</a>
                    </th>
                    <th>
                        <label></label>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Movie.Title
                        </td>
                        <td>
                            @item.Time.ToString("HH:mm")
                        </td>
                        <td>
                            @item.Salon.Name
                        </td>
                        <td>
                            @(item.Salon.Seats-item.TotalTicketsSold)
                        </td>
                        <td>
                            @if ((item.Salon.Seats - item.TotalTicketsSold) == 0)
                            {
                                <button type="button" class="btn btn-danger btn-sm" disabled>Fully booked</button>
                            }
                            else
                            {

                                <a asp-controller="Booking" asp-action="Show" asp-route-id="@item.Id" class="btn btn-success btn-sm">Book</a>
                            }
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No movies available today</p>
        }


    </div>
</div>
