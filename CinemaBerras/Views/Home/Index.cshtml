@model IEnumerable<CinemaBerras.Models.Display>
@*@{
        ViewData["Title"] = "Home Page";
    }*@

<br />
<div class="container row p-0 m-0">
    <div class="col-12">
        <h2>Movie List Today</h2>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table class=" table table-striped border">

                    <tr class="table table-secondary">

                        <th>
                            <label asp-for="FirstOrDefault().Movie.Title"></label>
                        </th>
                        <th>
                            <label asp-for="FirstOrDefault().Time"></label>
                        </th>
                        <th>
                            <label></label>
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Movie.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Time)
                            </td>
                            <td>
                                <button asp-page-handler="Booking" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to make a booking?')" class="btn btn-success btn-sm">Book</button>

                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No movies available today</p>
            }
        </form>

    </div>
</div>
