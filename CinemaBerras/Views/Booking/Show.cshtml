@model CinemaBerras.Models.Display
@*@{
        ViewData["Title"] = "View";
    }*@


<h4>Book your tickets</h4>
<hr />

<div class="border container" style="padding:30px">
    <form method="post" asp-action="Confirm">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Title"></label>
            </div>
            <div class="col-6">
                @Model.Movie.Title
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Time"></label>
            </div>
            <div class="col-6">
                @Model.Time.Hour:@Model.Time.Minute
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Salon.Name"></label>
            </div>
            <div class="col-6">
                @Model.Salon.Name
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Salon.Seats"></label>
            </div>
            <div class="col-6">
                @Model.Salon.Seats
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="TicketsSold">Book tickets (max. 12)</label>
            </div>
            <div class="col-6">
                <input Type="number" min="0" max="12" asp-for="TicketsSold" class="form-control" />

                <span asp-validation-for="TicketsSold" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <a asp-controller="Home" asp-action="Index">Back to movie list</a>
            </div>
            <div class="col-6">
                <input type="submit" value="Book tickets" class="btn btn-success form-control" />
            </div>
        </div>
    </form>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
